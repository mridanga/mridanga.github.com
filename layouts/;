<data>
{
    "navActive": "Lessons"
}
</data>

<js>
var lessons = _.filter(site.pages, function(page) {
    return page.type === 'lesson';
});

var lessonIndex;

for (var i = 0; i < lessons.length; i++) {
    if (lessons[i].id === this.id) {
        lessonIndex = i;
        break;
    }
}

this.lessonPrevious = (lessonIndex+1 >= lessons.length) ? null : lessons[i+1];
this.lessonNext = (lessonIndex-1 < 0) ? null : lessons[i-1];

</js>

<!-- @partial('header') -->

<!-- @partial('nav') -->

<section class="main">
    
    {{#title}}
        <h1>{{title}}</h1>
    {{/title}}

    <h1>help</h1>

    <!-- @place('content') -->

    <div class="lesson-navigation">
        {{#lessonPrevious}}
            <p class="previous">
                <a href="{{url}}">&larr; {{title}}</a>
            </p>
        {{/lessonPrevious}}
        {{#lessonNext}}
            <p class="next">
                <a href="{{url}}">&rarr; {{title}}</a>
            </p>
        {{/lessonNext}}
    </div>

</section><!-- main -->


